# ADAN-ID Cloud Environment Configuration
# Copy this file to .env and fill in your actual values

# Authentication Service
JWT_SECRET=your_jwt_secret_key_here
BIOMETRIC_ENCRYPTION_KEY=your_biometric_encryption_key
ABJAD_ENTROPY_SEED=your_quranic_abjad_entropy_seed

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
FIREBASE_DATABASE_URL=your_firebase_database_url

# GitHub Integration
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_ACCESS_TOKEN=your_github_access_token
GITHUB_ORGANIZATION=ADANiD-AI

# Genesis Core Integration
GENESIS_CORE_URL=https://your-genesis-core-endpoint.com
GENESIS_CORE_API_KEY=your_genesis_core_api_key

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/adan-id

# Storage Configuration
CLOUDFLARE_R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
CLOUDFLARE_R2_ACCESS_KEY=your_r2_access_key
CLOUDFLARE_R2_SECRET_KEY=your_r2_secret_key
CLOUDFLARE_R2_BUCKET=adan-id-storage

# IPFS Configuration
IPFS_NODE_URL=https://ipfs.infura.io:5001
IPFS_PROJECT_ID=your_ipfs_project_id
IPFS_PROJECT_SECRET=your_ipfs_project_secret

# Encryption Keys
AES_ENCRYPTION_KEY=your_aes_256_encryption_key
VAULT_ENCRYPTION_KEY=your_vault_encryption_key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your_grafana_admin_password
PROMETHEUS_RETENTION_TIME=15d
LOKI_RETENTION_PERIOD=168h

# API Gateway Configuration
API_RATE_LIMIT=1000
WEBSOCKET_MAX_CONNECTIONS=10000
CORS_ORIGINS=https://your-frontend-domain.com

# Security Configuration
ZERO_TRUST_ENABLED=true
BIOMETRIC_THRESHOLD=0.95
SESSION_TIMEOUT=3600

# Development/Production Mode
NODE_ENV=production
DEBUG_MODE=false
LOG_LEVEL=info